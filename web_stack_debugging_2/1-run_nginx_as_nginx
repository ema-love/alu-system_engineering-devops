#!/bin/bash
# Configure nginx to run as nginx user and listen on port 8080

# Edit nginx.conf to run as nginx
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Replace default port 80 â†’ 8080
sed -i 's/listen 80;/listen 8080;/' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:80;/listen \[::\]:8080;/' /etc/nginx/sites-enabled/default

# Fix permissions so nginx user can run nginx
chown -R nginx:nginx /var/lib/nginx
chown -R nginx:nginx /var/log/nginx
chown -R nginx:nginx /var/run

# Restart nginx
service nginx restart

