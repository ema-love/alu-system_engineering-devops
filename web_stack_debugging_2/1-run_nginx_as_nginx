#!/usr/bin/env bash
# Script that configures Nginx to run as nginx user on port 8080

# Update Nginx configuration to run as nginx user
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Change default port from 80 to 8080
sed -i 's/\slisten 80/listen 8080/g' /etc/nginx/sites-available/default

# Ensure nginx user exists and has proper permissions
chown -R nginx:nginx /var/log/nginx /var/lib/nginx 2>/dev/null || true

# Stop any running nginx process
service nginx stop 2>/dev/null || pkill nginx || true

# Start nginx (will run as nginx user based on nginx.conf)
sudo -u nginx /usr/sbin/nginx
