#!/usr/bin/env bash
# Script that configures Nginx to run as nginx user on port 8080

# Update Nginx configuration to run as nginx user
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Change default port from 80 to 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen \[::\]:8080 default_server;/' /etc/nginx/sites-available/default

# Give nginx user permission to use port 8080 (ports below 1024 require root)
# Since 8080 is above 1024, nginx user can bind to it

# Stop any running nginx process
pkill -f nginx

# Start nginx as nginx user
su -s /bin/bash -c '/usr/sbin/nginx' nginx
